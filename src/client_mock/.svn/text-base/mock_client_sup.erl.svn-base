-module(mock_client_sup).

-behaviour(supervisor).
%% --------------------------------------------------------------------
%% Include files
%% --------------------------------------------------------------------

%% --------------------------------------------------------------------
%% External exports
%% --------------------------------------------------------------------
-export([start_link/0,
	 create_new_client/5]).

%% --------------------------------------------------------------------
%% Internal exports
%% --------------------------------------------------------------------
-export([
	 init/1
        ]).

%% --------------------------------------------------------------------
%% Macros
%% --------------------------------------------------------------------

%% --------------------------------------------------------------------
%% Records
%% --------------------------------------------------------------------


%% ====================================================================
%% External functions
%% ====================================================================
start_link()->
	supervisor:start_link({local, ?MODULE},?MODULE, []).

create_new_client(ServerIp, ServerPort, ServerId, SpeakInterval, ClientId) ->
	supervisor:start_child(?MODULE, [ServerIp, ServerPort, ServerId, SpeakInterval, ClientId]).

%% ====================================================================
%% Server functions
%% ====================================================================
%% --------------------------------------------------------------------
%% Func: init/1
%% Returns: {ok,  {SupFlags,  [ChildSpec]}} |
%%          ignore                          |
%%          {error, Reason}
%% --------------------------------------------------------------------
init([]) ->
	{ok,{{simple_one_for_one,5, 60}, 
	     [{mock_client,
	       {mock_client,start_link,[]},
	       transient, 
	       brutal_kill,worker,[]}]}}.

