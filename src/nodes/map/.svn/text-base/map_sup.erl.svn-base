-module(map_sup).

-behaviour(supervisor).
%% --------------------------------------------------------------------
%% Include files
%% --------------------------------------------------------------------

%% --------------------------------------------------------------------
%% External exports
%% --------------------------------------------------------------------
-export([start_link/0,start_child/5,stop_child/1]).

%% --------------------------------------------------------------------
%% Internal exports
%% --------------------------------------------------------------------
-export([
	 init/1
        ]).

%% --------------------------------------------------------------------
%% Macros
%% --------------------------------------------------------------------
-define(SERVER, ?MODULE).

%% --------------------------------------------------------------------
%% Records
%% --------------------------------------------------------------------

%% ====================================================================
%% External functions
%% ====================================================================
start_link()->
	supervisor:start_link({local,?MODULE}, ?MODULE, []).


%% ====================================================================
%% Server functions
%% ====================================================================
%% --------------------------------------------------------------------
%% Func: init/1
%% Returns: {ok,  {SupFlags,  [ChildSpec]}} |
%%          ignore                          |
%%          {error, Reason}
%% --------------------------------------------------------------------
init([]) ->
    {ok,{{one_for_one,10,10}, []}}.

start_child(MapProcName,{LineId,MapId},Type,CreatorTag,Extra)->
	try
		AChild = {MapProcName,{map_processor,start_link,[MapProcName,{LineId,MapId},Type,CreatorTag,Extra]},
				  	      		transient,2000,worker,[map_processor]},
		supervisor:start_child(?MODULE, AChild)
	catch
		E:R-> io:format("can not start map(~p:~p) ~p ~p ~p~n",[E,R,MapProcName,{LineId,MapId},Extra]),
			  {error,R}
 	end.

stop_child(MapProcName)->
	supervisor:terminate_child(?MODULE, MapProcName),
	supervisor:delete_child(?MODULE, MapProcName).
%% ====================================================================
%% Internal functions
%% ====================================================================

